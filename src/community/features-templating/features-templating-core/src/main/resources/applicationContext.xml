<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="templateConfiguration" class="org.geoserver.featurestemplating.configuration.TemplateCache">
        <constructor-arg ref="dataDirectory"/>
    </bean>

    <bean id="templatesTabPanelInfo" class="org.geoserver.web.publish.LayerEditTabPanelInfo">
        <property name="id" value="templatesTabPanelInfo" />
        <property name="titleKey" value="TemplateTabPanelInfo.title" />
        <property name="descriptionKey" value="TemplateTabPanelInfo.shortDescription" />
        <property name="componentClass"
                  value="org.geoserver.featurestemplating.web.TemplateTabPanel" />
        <property name="order" value="999" />
    </bean>

    <bean id="templateDataPage" class="org.geoserver.web.MenuPageInfo">
        <property name="id" value="templateDataPage"/>
        <property name="titleKey" value="TemplateDataPage.title"/>
        <property name="descriptionKey" value="TemplateDataPage.shortDescription"/>
        <property name="componentClass" value="org.geoserver.featurestemplating.web.TemplateDataPage"/>
        <property name="category" ref="settingsCategory" />
        <property name="order" value="100" />
        <property name="icon" value="img/templateIcon.png" />
    </bean>

    <bean id="templateDao" class="org.geoserver.featurestemplating.configuration.TemplateDataDaoImpl"/>

</beans>